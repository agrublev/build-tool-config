{
  "private": true,
  "name": "milesj-root",
  "scripts": {
    "eslint": "beemo eslint .",
    "prettier": "beemo prettier \"./{configs,dotfiles,scripts}/*.{js,json,md,yml,yaml}\"",
    "test": "yarn run eslint",
    "prerelease": "yarn test",
    "release": "np --no-cleanup --no-yarn"
  },
  "beemo": {
    "module": "@local/core",
    "drivers": [
      "eslint",
      "prettier"
    ],
    "eslint": {
      "rules": {
        "no-var": "off",
        "no-console": "off",
        "promise/always-return": "off"
      }
    }
  }
}
